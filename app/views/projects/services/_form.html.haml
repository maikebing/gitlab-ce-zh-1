.row.prepend-top-default.append-bottom-default
  .col-lg-3
    %h4.prepend-top-0
      = @service.title
      = boolean_to_icon @service.activated?

    %p= @service.description
  .col-lg-9
    = form_for(@service, as: :service, url: namespace_project_service_path(@project.namespace, @project, @service.to_param), method: :put, html: { class: 'form-horizontal' }) do |form|
      = render 'shared/service_settings', form: form

      = form.submit '保存修改', class: 'btn btn-save'
      &nbsp;
      - if @service.valid? && @service.activated?
        - disabled = @service.can_test? ? '':'disabled'
        = link_to '测试设置', test_namespace_project_service_path(@project.namespace, @project, @service), class: "btn #{disabled}", title: @service.disabled_title
      = link_to "取消", namespace_project_services_path(@project.namespace, @project), class: "btn btn-cancel"
